// Parameter 1 = number of pixels in strip
// Parameter 2 = pin number (most are valid)
// Parameter 3 = pixel type flags, add together as needed:
//   NEO_KHZ800  800 KHz bitstream (most NeoPixel products w/WS2812 LEDs)
//   NEO_KHZ400  400 KHz (classic 'v1' (not v2) FLORA pixels, WS2811 drivers)
//   NEO_GRB     Pixels are wired for GRB bitstream (most NeoPixel products)
//   NEO_RGB     Pixels are wired for RGB bitstream (v1 FLORA pixels, not v2)
Adafruit_NeoPixel strip = Adafruit_NeoPixel(90, PIN, NEO_GRB + NEO_KHZ800);

void setup() {
  strip.begin();
  strip.show(); // Initialize all pixels to 'off'
}

void loop() {
  // Some example procedures showing how to display to the pixels:
  dopattern();
}
void dopattern()
{
  for(int16_t c=0;c<12;c++)
  {
    for(int16_t i=0;i<18;i++)
    {
      strip.setPixelColor(i,replaceColor(aztekpattern[c][i]));
      strip.setPixelColor(i+18,replaceColor(aztekpattern[c][i]));//repeat the pattern multiple times to fill the strip
      strip.setPixelColor(i+36,replaceColor(aztekpattern[c][i]));
      strip.setPixelColor(i+54,replaceColor(aztekpattern[c][i]));
      strip.setPixelColor(i+72,replaceColor(aztekpattern[c][i]));
      strip.setPixelColor(i+80,replaceColor(aztekpattern[c][i]));
      strip.setPixelColor(i+88,replaceColor(aztekpattern[c][i]));
    }
  strip.show(); // push out to strip
 delay(15);//delay for maximum effect
  }

}
unsigned long replaceColor(byte color)//extend 2 bits to 24 and shift bits for brighter shades

{
//Basically just extrapolating an 8 bit value (xxRRGGBB) to a 24 bit value (xxxxRRRR.GGGGBBBB) 
//to save storage used for the array
  byte redcolor=((color & 0x02)<<6)|((color&0x01)<<5);
  byte grncolor=((color & 0x08)<<4)|((color&0x04)<<3);
  byte blucolor=((color & 0x30)<<2)|((color&0x04)<<1);//<<1;
return strip.Color(redcolor,  grncolor,  blucolor);
 
